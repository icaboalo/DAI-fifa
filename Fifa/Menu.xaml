        <Button Name="btAddMatch" Grid.Column="0" Content="Añadir partido" HorizontalAlignment="Center" Margin="47,97,23,0" VerticalAlignment="Top" Width="90" Click="ButtonAddMatch_Click" Foreground="#FF7C0219" FontFamily="Comic Sans MS" BorderBrush="#FF7C0219" FontWeight="Bold">
