        <Button Name="btSearch" Grid.Column="0" Content="Buscar" HorizontalAlignment="Center" Margin="45,147,25,0" VerticalAlignment="Top" Width="90" Click="ButtonSearch_Click" Foreground="#FF7C0219" FontFamily="Comic Sans MS" BorderBrush="#FF7C0219" FontWeight="Bold">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>

        <Button Name="btModifyPlayer" Grid.Column="0" Content="Modificar partido" HorizontalAlignment="Center" Margin="46,122,24,0" VerticalAlignment="Top" Width="90" Click="ButtonModifyMatch_Click" Foreground="#FF7C0219" FontFamily="Comic Sans MS" BorderBrush="#FF7C0219" FontWeight="Bold">
