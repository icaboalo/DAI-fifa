        mc:Ignorable="d"
        Title="Menu" Height="536.401" Width="1024.469">
    <Grid Background="#FFDFDFDF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="106*"/>
            <ColumnDefinition Width="103*"/>
        </Grid.ColumnDefinitions>
        <Button Name="btAddMatch" Grid.Column="0" Content="Añadir partido" HorizontalAlignment="Center" Margin="12,142,407,0" VerticalAlignment="Top" Width="165" Click="ButtonAddMatch_Click" Foreground="#FB000000" FontFamily="Comic Sans MS" BorderBrush="#FB000000" FontWeight="Bold" Background="#FFF7F7F7" FontSize="18" Grid.ColumnSpan="3" Height="29"/>
        <Button Name="btExit" Grid.Column="0" Content="" HorizontalAlignment="Center" Margin="47,403,10,0" VerticalAlignment="Top" Width="103" Click="ButtonExit_Click" Height="40" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="button-salir.png"/>
            </Button.Background>
        </Button>
        <Grid Name="gContent" Grid.Column="1"  Margin="54,10,10,92" Grid.ColumnSpan="3"/>
        <Image Margin="0,10,381,392.333" Source="img-russia.png" Stretch="Fill" Grid.Column="0" Grid.ColumnSpan="3"/>
