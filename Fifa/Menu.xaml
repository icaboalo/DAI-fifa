        <Button Name="btDeleteMatch" Grid.Column="0" Content="Eliminar Partido" HorizontalAlignment="Center" Margin="46,197,24,0" VerticalAlignment="Top" Width="90" Click="ButtonDeleteMatch_Click" Foreground="#FF7C0219" FontFamily="Comic Sans MS" BorderBrush="#FF7C0219" FontWeight="Bold">
