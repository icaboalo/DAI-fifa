        <Button x:Name="btAddMatch_Copy2" Grid.Column="0" Content="Añadir gol" HorizontalAlignment="Center" Margin="12,250,407,0" VerticalAlignment="Top" Width="165" Click="ButtonAddGoal_Click" Foreground="#FB000000" FontFamily="Comic Sans MS" BorderBrush="#FB000000" FontWeight="Bold" Background="#FFF7F7F7" FontSize="18" Grid.ColumnSpan="3" Height="29"/>
        <Button x:Name="btAddMatch_Copy3" Grid.Column="0" Content="Eliminar Partido" HorizontalAlignment="Center" Margin="12,290,407,0" VerticalAlignment="Top" Width="165" Click="ButtonDeleteMatch_Click" Foreground="#FB000000" FontFamily="Comic Sans MS" BorderBrush="#FB000000" FontWeight="Bold" Background="#FFF7F7F7" FontSize="18" Grid.ColumnSpan="3" Height="29"/>
        <Button x:Name="btAddMatch_Copy4" Grid.Column="0" Content="Agregar Estadio" HorizontalAlignment="Center" Margin="12,336,407,0" VerticalAlignment="Top" Width="165" Click="ButtonAddStadium_Click" Foreground="#FB000000" FontFamily="Comic Sans MS" BorderBrush="#FB000000" FontWeight="Bold" Background="#FFF7F7F7" FontSize="18" Grid.ColumnSpan="3" Height="29"/>
    </Grid>
</Window>
