        <Button Name="btExit" Grid.Column="0" Content="Salir" HorizontalAlignment="Center" Margin="47,331,23,0" VerticalAlignment="Top" Width="90" Click="ButtonExit_Click"/>

        <Grid Name="gContent" Grid.Column="1"  Margin="10" Grid.ColumnSpan="3"/>
        <Image Margin="25,10,10,327" Source="imagen_2.jpg" Stretch="Fill" Grid.Column="0"/>

